<p id="notice"><%= notice %></p>

<h1>Listing Phones</h1>

<table>
  <thead>
    <tr>
      <th>Manufacturer</th>
      <th>Name</th>
      <th>Cpu</th>
      <th>Screen</th>
      <th>Price</th>
      <th>Battery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phones.each do |phone| %>
      <tr>
        <td><%= phone.manufacturer.name %></td>
        <td><%= phone.name %></td>
        <td><%= phone.cpu %></td>
        <td><%= phone.screen %></td>
        <td><%= phone.price %></td>
        <td><%= phone.battery %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

